<div class="d-flex justify-content-between align-items-center">
  <h1>Tweets</h1>

  <% if Current.user.twitter_accounts.any? %>
    <%= button_to "Schedule a Tweet", new_tweet_path, method: :get, class: "btn btn-primary" %>
  <% end%>
</div>

<% if Current.user.twitter_accounts.none? %>
  <%= button_to "Connect your Twitter account", "/auth/twitter", method: :post, data: {turbo: "false"}, class: "btn btn-primary" %>
<% end %>

<%= render @tweets %>
