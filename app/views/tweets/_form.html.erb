<%= form_with model: tweet, data: { turbo: false }, local: true do |form| %>
  <%= render "shared/form_errors", form: form %>

  <div class="mb-3">
    <%= form.label :twitter_account_id, class: "form-label"%>
    <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, { class: "form-control" } %>
    <%= link_to "Connect your Twitter account", "/auth/twitter", method: :post, data: {turbo: "false"}, class: "btn btn-link" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label"%>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :published_at, class: "form-label"%>
    <div class="form-control">
      <%= form.datetime_select :published_at%>
    </div>
  </div>

  <%= form.button "Schedule", class: "btn btn-primary" %>
  <% if form.object.persisted? %>
    <%#= link_to "Delete", tweet_path(tweet), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    <%#= button_to "Delete", form.object, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
  <% end %>
<% end %>
